    <style>
        .vesitable-item {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .vesitable-img {
            width: 100%;
            height: 300px; /* Adjust based on your desired image size */
            overflow: hidden;
        }

            .vesitable-img img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .p-4 {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .p-4 h4, .p-4 p {
                width: 100%;
                text-align: center;
            }

            .p-4 .mt-auto {
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

    </style>
</head>

<body>

